# Database Configuration
DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"
MONGODB_URI="mongodb+srv://user:password@host/database"

# Authentication
JWT_SECRET="your-secure-jwt-secret-at-least-32-chars"
JWT_EXPIRE="7d"

# Session Management
SESSION_SECRET="your-secure-session-secret"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="https://your-domain/api/oauth/google/callback"

# Push Notifications (VAPID)
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"
VAPID_EMAIL="mailto:your-email@example.com"

# Email Service (SMTP)
EMAIL_HOST="smtp.example.com"
EMAIL_PORT="587"
EMAIL_USER="your-email@example.com"
EMAIL_PASS="your-email-password"

# Server Configuration
PORT="8080"
NODE_ENV="development"
# Frontend URL - Azure App Service (Guardian Elite Setup)
FRONTEND_URL="https://www.thecollabify.tech"

# Optional / Recommended
SENTRY_DSN=""

# Redis Configuration (High-performance caching & Socket.io scaling)
# For Azure: rediss://:<key>@<hostname>:<port> (Note: 'rediss' with double 's' for TLS)
REDIS_URL=""
STRIPE_SECRET_KEY=""
ADMIN_ALLOWED_IPS="127.0.0.1,::1"
